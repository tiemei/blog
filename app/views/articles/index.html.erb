<% if @articles.empty? %>
<h3>No blog now!&nbsp;&nbsp;<a class="green" href="/articles/new">new blog?</a></h3>
<% end %>
<% @articles.each do |article| %>
  <%= article.created_at %>
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <a href="articles/<%= article.id %>/delete" class="green">delete</a>&nbsp;
  <a href="<%= edit_article_path(article.id) %>" class="green">edit</a>
  <h4><a href="<%= article_path(article.id) %>"><%= article.title %></a></h4>
<% end %>
<% content_for :right_below do %>
  <div id="right-below-month">
    <h4>Month</h4>
    <ul>
      <% @month_list.each do |month, count| %>
        <li><a href="/articles/month/<%=month%>" class="green"><%=month%>æœˆ</a>(<%=count%>)</li>
      <% end %>
    </ul>
  </div>
  <div id="right-below-tags">
    <h4>Tags</h4>
    <ul>
      <% @tags.each do |name, count| %>
        <li><a href="/tags/<%=u name %>" class="green"><%=name%></a>(<%=Tag.countAritlces(session[:current_user_id], name)%>)</li>
      <% end %>
    </ul>
  </div>
<% end %>
